{
  "name": "novel",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "format:write": "prettier --write \"**/*.{css,js,json,jsx,ts,tsx}\"",
    "format": "prettier \"**/*.{css,js,json,jsx,ts,tsx}\"",
    "release": "turbo build && cd packages/core && npm publish && cd ../../"
  },
  "dependencies": {
    "react-moveable": "^0.56.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.17",
    "eslint": "8.56.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "turbo": "^1.11.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/polesapart/novel.git"
  },
  "workspaces": ["packages/*"]
}
